package-as: ItemVersion

# Use manual changelog instead of auto-generated from git
manual-changelog:
  filename: CHANGELOG.md
  markup-type: markdown

# External library dependencies
externals:
  ItemVersion/Libs/AceAddon-3.0: https://repos.wowace.com/wow/ace3/trunk/AceAddon-3.0
  ItemVersion/Libs/AceConsole-3.0: https://repos.wowace.com/wow/ace3/trunk/AceConsole-3.0
  ItemVersion/Libs/AceDB-3.0: https://repos.wowace.com/wow/ace3/trunk/AceDB-3.0
  ItemVersion/Libs/AceDBOptions-3.0: https://repos.wowace.com/wow/ace3/trunk/AceDBOptions-3.0
  ItemVersion/Libs/AceGUI-3.0: https://repos.wowace.com/wow/ace3/trunk/AceGUI-3.0
  ItemVersion/Libs/AceLocale-3.0: https://repos.wowace.com/wow/ace3/trunk/AceLocale-3.0
  ItemVersion/Libs/CallbackHandler-1.0: https://repos.wowace.com/wow/callbackhandler/trunk/CallbackHandler-1.0
  ItemVersion/Libs/LibSharedMedia-3.0: https://repos.wowace.com/wow/libsharedmedia-3-0/trunk/LibSharedMedia-3.0
  ItemVersion/Libs/LibStub: https://repos.wowace.com/wow/libstub/tags/1.0

# don't do string replacement on these files
plain-copy:
  - ItemVersion/Data.lua

# Files and directories to ignore when packaging
ignore:
  - CONTRIBUTING.md
  - AUTHORS.md
  - CHANGELOG.md
  - docs
  - CLAUDE.md
  - README.md
  - selene.toml
  - stylua.toml
  - wow-stdlib.yml

move-folders:
  ItemVersion/ItemVersion: ItemVersion