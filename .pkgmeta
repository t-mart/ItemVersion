  - CHANGELOG.md
  - CLAUDE.md
  - CONTRIBUTING.md
  - docs
  - Makefile
  - README.md
  - scripts
  - selene.toml
  - stylua.toml
  - wow-stdlib.yml

move-folders:
  ItemVersion/ItemVersion: ItemVersion